<%= render 'list', { user: @user, book: @book } %>

<h2>Books</h2>

<table>
  <thead>
    <th></th>
    <th>title</th>
    <th>body</th>
    <th colspan="3"></th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>