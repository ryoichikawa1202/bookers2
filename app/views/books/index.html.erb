<h2>User info</h2>
<%= image_tag current_user.get_profile_image("100x100") %>
<table>
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= current_user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= current_user.introduction %></th>
    </tr>
    <tr>
      <th>
        <% if @user.id == current_user.id %>
          <%= link_to "edit", edit_user_path(@user.id) %>
        <% else %>
          <%= link_to "edit", user_path(current_user.id) %>
        <% end %>
      </th>
    </tr>
  </tbody>
</table>


<h2>New Book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>

<table>
  <thead>
    <th></th>
    <th>title</th>
    <th>body</th>
    <th colspan="3"></th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>