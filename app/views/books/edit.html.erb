<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
        <%= @book.errors.count %>errors prohibited this book from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @book, local: true do |f| %>
        <div class="form-group">
          <label for="title">Title</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", class: "form-control book_title" %>
        </div>
        <div class="form-group">
          <label for="body">Opinion</label>
          <%= f.text_area :body, id:"inputbody", class: "form-control book_body" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book", class: "btn btn-success" %>
        </div>
      <% end %>

      <%= link_to "show", book_path(@book.id) %>
      |
      <%= link_to "back", books_path %>
    </div>
  </div>
</div>